<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.TextArea?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.mainapp.TreeController">

    <Label text="Выберите тип обхода:" />
    <ComboBox fx:id="iteratorTypeBox" />

    <Label text="Структура дерева:" />
    <TreeView fx:id="treeView" prefHeight="250"/>

    <Button text="Начать обход" onAction="#onTraverseClicked"/>
    <Button text="Сброс" onAction="#onResetClicked"/>

    <Label text="История обхода:" />
    <TextArea fx:id="historyArea" prefHeight="150" editable="false"/>

</VBox>
