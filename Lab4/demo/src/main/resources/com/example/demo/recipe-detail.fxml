<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.RecipeDetailController"
            prefHeight="400.0" prefWidth="600.0">
    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="cookingTimeLabel" />
    <Label text="Ингредиенты:" />
    <ListView fx:id="ingredientsList" prefHeight="100" />
    <Label text="Описание:" />
    <TextArea fx:id="descriptionArea" editable="false" wrapText="true" prefHeight="150" />
    <Button text="Закрыть" onAction="#onClose" />

</VBox>
